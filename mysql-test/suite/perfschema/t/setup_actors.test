  where PROCESSLIST_ID=connection_id();

--disconnect con1

connect (con2, localhost, user2, , );

select NAME, TYPE, INSTRUMENTED, PROCESSLIST_USER, PROCESSLIST_HOST
  from performance_schema.THREADS
  where PROCESSLIST_ID=connection_id();

